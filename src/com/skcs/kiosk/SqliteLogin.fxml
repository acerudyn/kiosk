<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/2.2"
           fx:controller="com.skcs.kiosk.SqliteLogin"
           fx:id="root"
           style="-fx-background-color: RED;"
           prefWidth="1024"
           prefHeight="768">
    <VBox fx:id="vboxContainer" alignment="CENTER">
        <children>
            <Label prefHeight="50" alignment="CENTER" maxWidth="480" style="-fx-background-color: #f274d9; "
                   text="Test Login Sqlite" />
            <VBox maxWidth="480" maxHeight="300" alignment="CENTER" style="-fx-background-color: #B22222; -fx-padding : 8 0 0 0;">
                <children>
                    <JFXTextField fx:id="username" promptText="Username" style="-fx-text-fill: #00FFFF;"></JFXTextField>
                    <JFXPasswordField fx:id="password" promptText="Password" style="-fx-text-fill: #00FFFF;"></JFXPasswordField>
                    <HBox>
                        <children>
                            <Pane HBox.hgrow="SOMETIMES"></Pane>
                    <Button fx:id="btnLogin" alignment="BOTTOM_RIGHT" style="-fx-text-fill: BLUE;">Submit</Button>
                            <Button fx:id="btnView" alignment="BOTTOM_RIGHT" style="-fx-text-fill: BLUE;">View Record</Button>
                        </children>
                    </HBox>
                </children>
            </VBox>
            <Label prefHeight="50" alignment="CENTER" maxWidth="480" style="-fx-background-color: #f274d9; "
                   fx:id="textConect"/>
        </children>
    </VBox>

</StackPane>