<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/2.2"
           fx:controller="com.skcs.kiosk.ScreenAddUser"
           fx:id="root"
           style="-fx-background-color: c5ccd4ff;"
           prefWidth="1024"
           prefHeight="768">
    <VBox fx:id="vboxcontainer" spacing="16">

        <children>

        <AnchorPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
        >
            <children>
                <HBox fx:id="vboxLangTitle" alignment="CENTER" styleClass="ipad-dark-grey" prefHeight="88">
                    <children>
                        <ImageView fx:id="imgViewLogo"
                                   fitWidth="320"
                                   preserveRatio="true"
                        /><Label fx:id="lblScreenTitleTop"
                                 styleClass="title"
                                 style="-fx-padding: 0;"></Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblScreenTitle"
                                styleClass="title"
                                style="-fx-padding: 0 16;">Add User</Label>
                    </children>
                </HBox>

             <!-- Form Input User  -->
                        <VBox alignment="TOP_CENTER" fx:id="Left" prefWidth="1024" prefHeight="700"
                              style="-fx-background-color: c5ccd4ff; -fx-padding: 16 0 0 0;">
                            <children >
                            <!-- menu list -->
                            <HBox alignment="CENTER_LEFT" fx:id="hboxlabel" prefWidth="1024"
                                  style="-fx-background-color: f7f7f7ff; -fx-padding :  0 0 0 20;">
                                <children >
                                    <Label alignment="CENTER_LEFT" fx:id="label1" text="Username"
                                       style="-fx-background-color: f7f7f7ff;
                                               -fx-font-family: Ubuntu; -fx-font-size: 16px;
                                               /*-fx-background-color:#ef473a;*/ -fx-text-fill: BLACK;"
                                           prefWidth="290" prefHeight="50" />
                                    <TextField alignment="CENTER_LEFT" promptText="Required" fx:id="textUsername"
                                               styleClass="textSetting" />
                                </children></HBox>

                              <Line fill="fuchsia" strokeLineCap="BUTT"/>

                                <HBox alignment="CENTER_LEFT" fx:id="hboxlabel" prefWidth="1024"
                                      style="-fx-background-color: f7f7f7ff; -fx-padding :  0 0 0 20;">
                                    <children >
                                        <Label alignment="CENTER_LEFT" fx:id="Label1" text="Password"
                                               style="-fx-background-color: f7f7f7ff;
                                               -fx-font-family: Ubuntu; -fx-font-size: 16px;
                                               /*-fx-background-color:#ef473a;*/ -fx-text-fill: BLACK;"
                                               prefWidth="290" prefHeight="50" />
                                        <PasswordField alignment="CENTER_LEFT" promptText="Requried" fx:id="textPassword"
                                                   styleClass="textSetting" />
                                    </children></HBox>

                                <Line fill="fuchsia" strokeLineCap="BUTT"/>

                                <HBox alignment="CENTER_LEFT" fx:id="hboxlabel" prefWidth="1024"
                                      style="-fx-background-color: f7f7f7ff; -fx-padding :  0 0 0 20;">
                                    <children >
                                        <Label alignment="CENTER_LEFT" fx:id="label1" text="Role Acsess"
                                               style="-fx-background-color: f7f7f7ff;
                                               -fx-font-family: Ubuntu; -fx-font-size: 16px;
                                               /*-fx-background-color:#ef473a;*/ -fx-text-fill: BLACK;"
                                               prefWidth="290" prefHeight="50" />
                                        <ComboBox fx:id="comboRole">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="Admin" />
                                                    <String fx:value="User" />
                                                    <String fx:value="Owner" />
                                                    <String fx:value="Technical" />
                                                </FXCollections>
                                            </items>
                                            <value>
                                                <String fx:value="-Acsess-" />
                                            </value>
                                        </ComboBox>
                                    </children></HBox>

                                <Line fill="fuchsia" strokeLineCap="BUTT"/>

                                <!-- Button OK Cancel -->
                                <HBox alignment="CENTER_LEFT" style="-fx-background-color: c5ccd4ff; ">
                                    <children>
                                        <VBox alignment="BOTTOM_LEFT" style="-fx-background-color: c5ccd4ff;" prefWidth="510" prefHeight="484">

                                            <HBox fx:id="mainMenuNavbar" styleClass="navbar" >
                                                <children>

                                                    <JFXButton
                                                            alignment="BASELINE_LEFT"
                                                            style="-fx-padding : 0 0 0 30;"
                                                            fx:id="btnReset"
                                                            prefWidth="200"
                                                            prefHeight="64"
                                                            styleClass="button-nav"
                                                            buttonType="FLAT"
                                                            text="BACK"/>
                                                </children>
                                            </HBox>

                                       </VBox>
                                        <VBox alignment="BOTTOM_RIGHT" style="-fx-background-color: c5ccd4ff;" prefWidth="520" prefHeight="484">

                                            <HBox fx:id="mainMenuNavbar" styleClass="navbar" style="-fx-padding: 0 0 0 0;">
                                                <children>

                                                    <Pane HBox.hgrow="ALWAYS"/>
                                                    <JFXButton
                                                            alignment="BASELINE_RIGHT"
                                                            style="-fx-padding : 0 30 0 0;"
                                                            fx:id="btnSave"
                                                            prefWidth="200"
                                                            prefHeight="64"
                                                            styleClass="button-nav"
                                                            buttonType="FLAT"
                                                            text="SAVE"/>
                                                </children>
                                            </HBox>

                                       </VBox>
                                  </children></HBox>
